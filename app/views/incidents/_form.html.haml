
= form_for(@incident) do |f|
  - if @incident.errors.any?
    #error_explanation
      %h2
        = pluralize(@incident.errors.count, "error")
        prohibited this incident from being saved:
      %ul
        - @incident.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :mountain
    %br/
    = f.text_field :mountain
  .field
    = f.label :latitude
    %br/
    = f.text_field :latitude
  .field
    = f.label :longitude
    %br/
    = f.text_field :longitude
  .field
    = f.label :when
    %br/
    = f.datetime_select :when
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .actions
    = f.submit
